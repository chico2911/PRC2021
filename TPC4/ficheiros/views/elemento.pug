extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h3.w3-center= elem.name
        .w3-container
                table(class="w3-table-all")
                    tr
                        th Nome
                        th= elem.name   
                    tr
                        th Atomic Number
                        th= elem.anumber    
                    tr
                        th Atomic Weight
                        th= elem.aweight    
                    tr
                        th CAS ID
                        th= elem.casregid        
                    tr
                        th Simbolo
                        th= elem.symbol          
                    tr
                        th Classi
                        th= elem.classi      
                    tr
                        th Bloco
                        th= elem.block 
                    tr
                        th Grupo
                        th
                            a(href=("/grupos/"+elem.group))= elem.group   
                    tr
                        th Periodo
                        th
                            a(href=("/periodos/"+elem.period))= elem.period        
        footer(class="w3-container w3-teal")
            adress.w3-right A85367
            a(href="/") Voltar