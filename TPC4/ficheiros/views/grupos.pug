extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h3.w3-center Grupos
        .w3-container
                table(class="w3-table-all")
                    tr
                        th Nome
                        th Number
                    each gr in grupos
                        tr
                            td
                                a(href= "/grupos/" + gr.id)= gr.name
                            td= gr.number 
        footer(class="w3-container w3-teal")
            adress.w3-right A85367
            a(href="/") Voltar